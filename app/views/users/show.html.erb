<section class="dashboard-main">
  <h1> <%= current_user.first_name %>'s Dashboard </h1>

  <%= button_to 'Log Out', logout_path, method: 'delete', class: "btn btn-primary mb1 bg-teal" %>
  <h3>Account Details</h3>
  <ul>
    <li> <%= current_user.first_name  %> <%= current_user.last_name %> </li>
    <li> <%= current_user.email%> </li>
  </ul>

  <section>
    <h1>Bookmarked Segments</h1>
  </section>


<% if current_user.token == nil %>
  <%= link_to "Connect GitHub", '...' %>
<% else %>
  <section>

    <h1>Github</h1>
    <ul><b>Repos<b>
      <%@facade.user_repos(5).each do |repo| %>
        <li class="github_repo"><%= link_to "#{repo.name}", repo.url %></li>
      <%end%>
    </ul>

    <ul><b>Followers<b>
      <%@facade.followers(5).each do |follower| %>
        <li class="follower"><%= link_to "#{follower.name}", follower.url %></li>
      <%end%>
    </ul>

    <ul><b>Following<b>
      <%@facade.following.each do |follow| %>
        <li class="following"><%= link_to "#{follow.name}", follow.url %></li>
      <%end%>
    <ul>

  </section>
  <%end%>

</section>
